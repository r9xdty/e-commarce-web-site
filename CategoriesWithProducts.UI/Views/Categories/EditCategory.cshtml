@model CategoriesWithProducts.UI.Models.DTO.CategoryDto

@{
}

<h1 class="mt-3">Edit Category</h1>

@if (Model is not null)
{	
	<form method="post">

		<div class="m-3">
		<label class="form-label">Id</label>
		<input type="text" class="form-control" asp-for="Id" readonly/>
		</div>

		<div class="m-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>

		<div class="m-3">
			<label class="form-label">TotalPrice</label>
			<input type="text" class="form-control" asp-for="TotalPrice" readonly/>
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>

		<div class="mt-3">
			<a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Back to List</a>
		</div>

	</form>
}
