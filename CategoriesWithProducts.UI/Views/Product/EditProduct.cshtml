@model CategoriesWithProducts.UI.Models.DTO.ProductDto

@{
	var categoryId = ViewBag.CategoryId;
}


<h1 class="mt-3">Edit Product</h1>

@if (Model is not null)
{
	<form method="post">

		<div class="m-3">
			<label class="form-label">Id</label>
			<input type="text" class="form-control" asp-for="Id" readonly />
		</div>

		<div class="m-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" asp-for="Name" />
		</div>

		<div class="m-3">
			<label class="form-label">TotalPrice</label>
			<input type="text" class="form-control" asp-for="Price" />
		</div>

		<div class="m-3">
			<label class="form-label">ProductImageUrl</label>
			<input type="text" class="form-control" asp-for="ProductImageUrl" />
		</div>

		<div class="m-3">
			<label class="form-label">CategoryId</label>
			<input type="text" class="form-control" asp-for="CategoryId" />
		</div>

		<div class="mt-3">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>

		<div>
			<a href ="https://localhost:7260/Product/Index/@Model.CategoryId" class="btn btn-secondary">Back to List</a>

		</div>

	</form>
}
