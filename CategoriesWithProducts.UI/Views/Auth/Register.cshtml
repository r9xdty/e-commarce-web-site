@model CategoriesWithProducts.UI.Models.DTO.RegisterRequestDto


<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">

			<h1 class="mt-3 mb-3 h3">
				Register
			</h1>
			<form asp-action="Register" method="post">

				<div class="mb-3">
					<label class="form-label">Email</label>
					<input asp-for="UserName" type="email" class="form-control" required />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label">Password</label>
					<input asp-for="Password" type="password" class="form-control" required />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label class="form-label">Who do you want to progress as?</label>
					<select asp-for="Roles" class="form-select" multiple>
						<option value="Reader" class="mb-1">Customer</option>
						<option value="Writer" class="mb-1">Market</option>
					</select>
				</div>

				<div class="mb-3">
					<button type="submit">Register</button>
				</div>

			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}