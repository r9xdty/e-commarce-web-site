@model CategoriesWithProducts.UI.Models.DTO.LoginRequestDto


@{
}


<div class="container mx-auto">
	<div class="row justify-content-center">
		<div class="col-12 col-lg-6">

			<h1 class="mt-3 mb-3 h3">
				Login
			</h1>
			<form asp-action="Login" method="post">

				<div class="mb-3">
				<label class="form-label">Email</label>
				<input asp-for="UserName" type="email" class="form-control" required />
				<span asp-validation-for="UserName" class="text-danger"></span>
				</div>

				<div class="mb-3">
				<label class="form-label">Password</label>
				<input asp-for="Password" type="password" class="form-control" required />
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<button type="submit" class="btn btn-dark">Login</button>
				</div>

				<div class="mb-2">
					<a asp-controller="Categories" asp-action="Index" class="btn btn-secondary">Back to Market</a>
				</div>

				<input type="hidden" asp-for="ReturnUrl" />
			</form>
		</div>
	</div>
</div>