@using CategoriesWithProducts.UI.Models.DTO
<!DOCTYPE html>
<html lang="en">
<head>
	<link rel="icon" type="image/png" href="~/uploads/logo.png" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - AllWays Bazaar</title>

	<!-- CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CategoriesWithProducts.UI.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/toastr/build/toastr.min.css" rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />

	<!--yeni-->
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>



	<!-- JS: 3rd party üstte olabilir -->
	<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

	<link href='https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css' rel='stylesheet' type='text/css' />
	<script type='text/javascript' src='https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js'></script>
</head>

<body data-bs-theme="light">
	<header>
		<nav class="navbar navbar-expand-lg bg-dark shadow-sm py-3" style="height: 80px;">
			<div class="container-fluid">
				<a class="navbar-brand d-flex align-items-center text-white position-relative" asp-controller="Home" asp-action="Index" style="height: 60px; overflow: visible;">
					<img src="~/uploads/logo.png" alt="Logo" style="height: 80px; object-fit: contain; position: absolute; top: -10px;" class="me-2" />
					<span style="margin-left: 100px;">AllWays Bazaar</span>
				</a>
				<button class="navbar-toggler text-white" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="mainNavbar">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-1"></i>Home</a>
						</li>
					</ul>

					<!-- Ortalanmış Kategori ve Arama -->
					<div class="d-flex justify-content-center align-items-center mx-auto gap-3" style="max-width: 800px; width: 100%;">
						<div class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-white px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="bi bi-grid me-0"></i> All Categories
							</a>
							<ul class="dropdown-menu shadow-sm p-2" style="min-width: 250px; max-height: 400px; overflow-y: auto;">
								@await Component.InvokeAsync("CategoryMenu")
							</ul>
						</div>

						<form class="d-flex flex-grow-1" asp-controller="Product" asp-action="ShowAllProducts" method="get" onsubmit="return validateSearchForm()" style="max-width: 750px;">
							<div class="flex-grow-1 position-relative">
								<input type="text" class="form-control me-2 ms-1" name="filterQuery" id="filterQuery" placeholder="Search products..." autocomplete="off" />
								<div id="searchSuggestions" class="position-absolute bg-white shadow-sm rounded mt-1 z-3 w-100" style="max-height: 300px; overflow-y: auto; z-index: 1000; display: none;"></div>
							</div>
							<button class="btn btn-warning ms-2" type="submit"><i class="bi bi-search"></i></button>
						</form>

					</div>
					<div class="d-flex align-items-center gap-3">
						<div class="dropdown">
							<button class="btn btn-outline-light dropdown-toggle btn-sm" id="themeDropdown" data-bs-toggle="dropdown">
								<span id="currentThemeIcon">☀️</span>
							</button>
							<ul class="dropdown-menu dropdown-menu-end">
								<li><button class="dropdown-item theme-toggle" data-theme="light">☀️ Light</button></li>
								<li><button class="dropdown-item theme-toggle" data-theme="dark">🌙 Dark</button></li>
								<li><button class="dropdown-item theme-toggle" data-theme="auto">🖥️ System</button></li>
							</ul>
						</div>

						@if (Context.Session.GetString("token") != null)
						{
							<div class="dropdown">
								<button class="btn btn-outline-light dropdown-toggle btn-sm" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="bi bi-person-circle me-1"></i>@Context.Session.GetString("username")
								</button>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
									<li>
										<a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">
											<i class="bi bi-bag-check me-1"></i>My Orders
										</a>
									</li>
									@if (User.IsInRole("Admin") || User.IsInRole("ADMIN"))
									{
										<li><hr class="dropdown-divider" /></li>
										<li class="dropdown-header">Admin Panel</li>
										<li>
											<a class="dropdown-item" asp-controller="Coupons" asp-action="ShowAllCoupons">
												<i class="bi bi-ticket-perforated me-1"></i>Coupons
											</a>
										</li>
										<li>
											<a class="dropdown-item" asp-controller="Coupons" asp-action="ShowCouponsPerUser">
												<i class="bi bi-people me-1"></i>Show Coupons By User
											</a>
										</li>
										<li>
											<a class="dropdown-item" asp-controller="Order" asp-action="AllOrders">
												<i class="bi bi-clipboard-check me-1"></i>All Orders
											</a>
										</li>
									}
									<li><hr class="dropdown-divider" /></li>
									<li>
										<a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
											<i class="bi bi-box-arrow-right me-1"></i>Logout
										</a>
									</li>
								</ul>
							</div>
						}
						else
						{
							<a class="btn btn-sm btn-light me-2" asp-controller="Auth" asp-action="Login">Login</a>
							<a class="btn btn-sm btn-outline-light me-2" asp-controller="Auth" asp-action="Register">Register</a>
						}

						<a class="btn btn-sm btn-light ms-2" asp-controller="Cart" asp-action="GetCarts">
							<i class="bi bi-cart me-1"></i>My Cart
						</a>

					</div>
				</div>
			</div>
		</nav>
	</header>

	<main class="pb-3">
		@RenderBody()
	</main>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - AllWays Bazaar - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<!-- Toast Container -->
	<div aria-live="polite" aria-atomic="true" class="position-fixed bottom-0 end-0 p-3" style="z-index: 9999">
		<div id="toastContainer"></div>
	</div>

	<!-- JS Libraries -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="assets/plugins/global/plugins.bundle.js"></script>
	<script src="assets/js/scripts.bundle.js"></script>

	<!-- Toast JS (inline veya ayrı js dosyasına da koyabilirsin) -->
	<script>
		function showToast(message, type = "success") {
		const toastId = `toast-${Date.now()}`;
		const toastHtml = `
		<div id="${toastId}" class="toast align-items-center text-white bg-${type} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="d-flex">
				<div class="toast-body">${message}</div>
				<button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
		</div>`;

		$('#toastContainer').append(toastHtml);
		const toast = new bootstrap.Toast(document.getElementById(toastId), { delay: 3000 });
		toast.show();

		setTimeout(() => {
		$(`#${toastId}`).remove();
		}, 3500);
		}
	</script>

	<script>
		function validateSearchForm() {
			var query = document.getElementById('filterQuery').value.trim();
			if (query === "") {
				window.location.href = '/'; // Ana sayfaya yönlendir
				return false; // Form gönderimini engelle
			}
			return true;
		}
	</script>

	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const themeButtons = document.querySelectorAll('.theme-toggle');
			const currentIcon = document.getElementById('currentThemeIcon');
			const body = document.body;

			// Yüklenince tema ikonunu ayarla
			updateIcon(body.getAttribute("data-bs-theme") || "light");

			themeButtons.forEach(btn => {
				btn.addEventListener('click', () => {
					const selectedTheme = btn.getAttribute('data-theme');

					if (selectedTheme === "auto") {
						const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? "dark" : "light";
						body.setAttribute("data-bs-theme", systemTheme);
						updateIcon(systemTheme);
					} else {
						body.setAttribute("data-bs-theme", selectedTheme);
						updateIcon(selectedTheme);
					}

					// İsteğe bağlı: Tema tercihini localStorage'da sakla
					localStorage.setItem('selectedTheme', selectedTheme);
				});
			});

			// Sayfa yüklenince localStorage'dan tema uygula
			const savedTheme = localStorage.getItem('selectedTheme');
			if (savedTheme) {
				if (savedTheme === "auto") {
					const systemTheme = window.matchMedia('(prefers-color-scheme: dark)').matches ? "dark" : "light";
					body.setAttribute("data-bs-theme", systemTheme);
					updateIcon(systemTheme);
				} else {
					body.setAttribute("data-bs-theme", savedTheme);
					updateIcon(savedTheme);
				}
			}

			function updateIcon(theme) {
				currentIcon.textContent = theme === "dark" ? "🌙" : "☀️";
			}
		});
	</script>

	<script>
		$(document).ready(function () {
			$("#filterQuery").on("input", function () {
				var query = $(this).val().trim();

				if (query.length === 0) {
					$("#searchSuggestions").hide();
					return;
				}

				$.ajax({
					url: "/Product/LiveSearch",
					method: "GET",
					data: { term: query },
					success: function (data) {
						var html = "";

						if (data.length === 0) {
							html = "<div class='p-2 text-muted'>No results found.</div>";
						} else {
							data.forEach(function (item) {
								html += `
									<a href="/Product/SelectedProduct/${item.id}" class="d-flex align-items-center p-2 border-bottom text-decoration-none text-dark">
										<img src="${item.productImageUrl}" alt="${item.name}" class="me-2" width="50" height="50" style="object-fit: cover;" />
										<span>${item.name}</span>
									</a>`;
							});
						}

						$("#searchSuggestions").html(html).show();
					}
				});
			});

			// Liste dışına tıklanınca gizle
			$(document).on("click", function (e) {
				if (!$(e.target).closest('#filterQuery, #searchSuggestions').length) {
					$("#searchSuggestions").hide();
				}
			});
		});
	</script>

	<!-- Toast gösterimi TempData ile -->
	@if (TempData["SuccessMessage"] != null)
	{
		<script>
			$(document).ready(function () {
				showToast("@TempData["SuccessMessage"]", "success");
			});
		</script>
	}
	else if (TempData["Error"] != null)
	{
		<script>
			$(document).ready(function () {
				showToast("@TempData["Error"]", "danger");
			});
		</script>
	}
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
